<% layout("/layouts/boilerplate") -%>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a new Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control">
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" id=""><%= listing.description %> 
      </textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input name="listing[image]" class="form-control" type="text" value="<%= listing.image.url %>">
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" class="form-control" type="number" value="<%= listing.price %>">
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" class="form-control" type="text" value="<%= listing.country %>">
        </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" class="form-control" type="text" value="<%= listing.location %>">
        </div>
        <button class="btn btn-dark edit-btn mt-3">Add</button>
        <br><br><br>
      </form>
    </div>
  </div>