<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
  <h3>Add a new Listing</h3>
  <form method="POST" action="/listings">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" 
      type="text" 
      placeholder="Add a Catcy Title" 
      class="form-control"
      />
    </div>
    
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]"
       type="textarea"
       class="form-control"
      ></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image-Link</label>
      <input name="listing[image]" 
      type="text" 
      placeholder="enter image url" 
      class="form-control">
    </div>
    
    <div class="row">
      <div class="mb-3 col-4">
      <label for="price" class="form-label">Price</label>
      <input name="listing[price]" type="number" placeholder="eg. 1200" class="form-control">
    </div>
    
    <div class="mb-3 col-8">
      <label for="country" class="form-label">Country</label>
      <input name="listing[country]" type="text" placeholder="India" class="form-control">
    </div>
    </div>
    
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" type="text" placeholder="Jaipur, Rajasthan" class="form-control">
    </div>
    
    <button class="btn btn-dark add-btn">Add</button>
    <br><br><br>
  </form>
  </div>
</div>